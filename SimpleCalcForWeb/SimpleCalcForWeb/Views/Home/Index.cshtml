@{
    ViewData["Title"] = "Home";
}

<meta charset="utf-8" />

<h1>Расчет арифметических выражений онлайн</h1>

@model SimpleCalcForWeb.Models.Note

<form asp-action="Index" metod="post">
    <p>Введите арифметическое выражение (скобки, числа, операции должны быть разделены пробелом).</p>
    <input asp-for="Expression"/>
    <input type="submit" value="Расчет"/>
</form>

<h2>@ViewData["Result"]</h2>

<h3>История</h3>
<form asp-action="Index" method="get">
    <input asp-for="Expression"/>
    <input asp-for="Host"/>
    <input type="submit" value="Отфильтровать"/>
</form>
<table>
    <tr><th width="500px">Выражение</th><th width="500px">Результат</th><th width="500px">Имя хоста</th></tr>
    @for(int i = ViewBag.History.Count - 1; i >= 0; i--)
    {
        <tr>
            <td>@ViewBag.History[i].Expression</td>
            <td>
                @switch(ViewBag.History[i].CodeError)
                {
                    case 0:
                        @ViewBag.History[i].Result
                        break;
                    default:
                        ViewData["Error"] = "Ошибка ввода";
                        @ViewData["Error"]
                        break;
                }
            </td>
            <td>@ViewBag.History[i].Host</td>
        </tr>
    }
</table>